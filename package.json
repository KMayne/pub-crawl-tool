{
  "name": "pub-crawl-tool",
  "description": "A web app for tracking points on the 2018 circle line pub crawl.",
  "author": "Kian Mayne <git@kianmayne.co.uk>",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start-prod": "npm run build && cross-env NODE_ENV=production npm run start",
    "start": "node src/app.js",
    "tunnel": "concurrently \"npm run start\" \"lt -p 3000 -s circlelinepubcrawl -o\"",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "body-parser": "^1.18.2",
    "clipboard": "^1.7.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.8",
    "express": "^4.16.2",
    "file-loader": "^1.1.6",
    "mongoose": "^4.13.9",
    "morgan": "^1.9.0",
    "node-sass": "^4.7.2",
    "normalize.css": "^7.0.0",
    "path": "^0.12.7",
    "sass-loader": "^6.0.6",
    "serve-favicon": "^2.4.5",
    "vue": "^2.5.13",
    "vue-loader": "^13.7.0",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4"
  },
  "browserslist": [
    "> 1%",
    "last 3 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "concurrently": "^3.5.1",
    "localtunnel": "^1.8.3"
  },
  "main": "src/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KMayne/pub-crawl-tool.git"
  },
  "keywords": [
    "pub",
    "crawl",
    "points",
    "scoreboard",
    "leaderboard",
    "banter"
  ],
  "bugs": {
    "url": "https://github.com/KMayne/pub-crawl-tool/issues"
  },
  "homepage": "https://github.com/KMayne/pub-crawl-tool#readme",
  "engines": {
    "node": ">=8.9"
  }
}
